{
  "name": "jellyfin-ai-recommender",
  "version": "2.1.0",
  "private": true,
  "description": "Monorepo scripts for frontend and backend development",
  "scripts": {
    "install:all": "npm --prefix backend install && npm --prefix frontend install",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\" -n backend,frontend -c cyan,magenta",
    "test": "npm --prefix backend run test && npm --prefix frontend run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^27.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}