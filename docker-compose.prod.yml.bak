version: '3.8'
services:
  backend:
    build: ./backend
    image: jellyfin-ai-recommender:v2.0.0
    container_name: jellyfin-ai-backend
    restart: unless-stopped
    ports:
      - "3001:3001"
    env_file:
      - backend/.env
    environment:
      - JELLYFIN_URL=${JELLYFIN_URL}
      - JELLYSEERR_URL=${JELLYSEERR_URL}
      - JELLYSEERR_API_KEY=${JELLYSEERR_API_KEY}
      - GEMINI_API_KEY=${GEMINI_API_KEY}
    volumes:
      # Persist the Prisma folder (including dev.db). Avoid duplicate mounts to the same target.
      - ./backend/prisma:/app/prisma
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    networks:
      - jair_net
      
  frontend:
    build: ./frontend
    image: jellyfin-ai-recommender-frontend:v2.0.0
    container_name: jellyfin-ai-frontend
    restart: unless-stopped
    ports:
      - "3000:80" # Access via http://localhost:3000 on host port 3000
    depends_on:
      - backend
    networks:
      - jair_net

networks:
  jair_net:
    driver: bridge
