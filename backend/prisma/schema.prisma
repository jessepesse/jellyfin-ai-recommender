// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  // URL configured in prisma.config.ts for Prisma 7
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  createdAt DateTime @default(now())
  movieProfile String?
  tvProfile    String?
  
  // Relations
  userMedia            UserMedia[]
  weeklyWatchlist WeeklyWatchlist[]
  redemptionCandidates RedemptionCandidates[]
}

model Media {
  id          Int      @id @default(autoincrement())
  tmdbId      Int      @unique
  title       String
  mediaType   String
  posterUrl   String?  // Local cached image path (/images/movie_123_poster.jpg)
  posterSourceUrl String? // Original Jellyseerr/proxy URL (backup)
  overview    String?
  backdropUrl String?  // Local cached image path (/images/movie_123_backdrop.jpg)
  backdropSourceUrl String? // Original Jellyseerr/proxy URL (backup)
  voteAverage Float?
  language    String?
  releaseYear String?
  
  // Enriched metadata (Phase 1)
  genres            String?   // JSON array: ["Science Fiction", "Action", "Drama"]
  keywords          String?   // JSON array: ["cyberpunk", "dystopia", "neo-noir"]
  director          String?   // "Denis Villeneuve"
  topCast           String?   // JSON array: ["Ryan Gosling", "Ana de Armas"]
  tagline           String?   // "The key to the future is finally unearthed."
  
  // TMDB relationships (cached)
  similarIds        String?   // JSON array of TMDB IDs: [157336, 329865, 27205]
  recommendationIds String?   // JSON array of TMDB IDs: [438631, 76600, 19995]
  
  // Enrichment timestamp (for cache invalidation)
  enrichedAt        DateTime?
  
  // Relations
  users       UserMedia[]
}

model UserMedia {
  id        Int      @id @default(autoincrement())
  userId    Int
  mediaId   Int
  status    MediaStatus
  updatedAt DateTime @updatedAt
  
  // Redemption Arc fields
  blockedAt          DateTime?
  permanentBlock     Boolean   @default(false)
  softBlockUntil     DateTime?
  redemptionAttempts Int       @default(0)

  user      User     @relation(fields: [userId], references: [id])
  media     Media    @relation(fields: [mediaId], references: [id])

  @@unique([userId, mediaId])
}

// System configuration singleton for runtime settings editable via UI
model SystemConfig {
  id               Int     @id @default(1)
  jellyfinUrl      String?
  jellyseerrUrl    String?
  jellyseerrApiKey String?
  tmdbApiKey       String?
  geminiApiKey     String?
  geminiModel      String  @default("gemini-3-flash-preview")
  isConfigured     Boolean @default(false)
}

enum MediaStatus {
  WATCHED
  WATCHLIST
  BLOCKED
}

// Pre-generated weekly recommendations (Weekly Watchlist feature)
model WeeklyWatchlist {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  
  movies       String   // JSON: [{tmdbId, title, posterUrl, overview}]
  tvShows      String   // JSON: same structure
  
  tasteProfile String   // "You love: Dark dramas, 90s thrillers..."
  
  generatedAt  DateTime @default(now())
  weekStart    DateTime
  weekEnd      DateTime
  
  @@unique([userId, weekStart])
  @@index([userId])
}

model RedemptionCandidates {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  
  candidates   String   // JSON: [{media, blockedAt, appealText, confidence, reasons}]
  
  generatedAt  DateTime @default(now())
  weekStart    DateTime
  weekEnd      DateTime
  
  @@unique([userId, weekStart])
  @@index([userId])
}
