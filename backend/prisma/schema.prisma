// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  // URL configured in prisma.config.ts for Prisma 7
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  createdAt DateTime @default(now())
  movieProfile String?
  tvProfile    String?
  
  // Relations
  media     UserMedia[]
}

model Media {
  id          Int      @id @default(autoincrement())
  tmdbId      Int      @unique
  title       String
  mediaType   String
  posterUrl   String?  // Local cached image path (/images/movie_123_poster.jpg)
  posterSourceUrl String? // Original Jellyseerr/proxy URL (backup)
  overview    String?
  backdropUrl String?  // Local cached image path (/images/movie_123_backdrop.jpg)
  backdropSourceUrl String? // Original Jellyseerr/proxy URL (backup)
  voteAverage Float?
  language    String?
  releaseYear String?
  
  // Relations
  users       UserMedia[]
}

model UserMedia {
  id        Int      @id @default(autoincrement())
  userId    Int
  mediaId   Int
  status    MediaStatus
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  media     Media    @relation(fields: [mediaId], references: [id])

  @@unique([userId, mediaId])
}

// System configuration singleton for runtime settings editable via UI
model SystemConfig {
  id               Int     @id @default(1)
  jellyfinUrl      String?
  jellyseerrUrl    String?
  jellyseerrApiKey String?
  geminiApiKey     String?
  geminiModel      String  @default("gemini-3-flash-preview")
  isConfigured     Boolean @default(false)
}

enum MediaStatus {
  WATCHED
  WATCHLIST
  BLOCKED
}
